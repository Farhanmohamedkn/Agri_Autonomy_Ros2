<?xml version="1.0"?>
<robot name="agri_ugv">

  <!-- Materials -->
  <material name="green">
    <color rgba="0.1 0.6 0.1 1.0"/>
  </material>
  <material name="black">
    <color rgba="0.05 0.05 0.05 1.0"/>
  </material>
  <material name="stripe_red">
    <color rgba="1.0 0.0 0.0 1.0"/>
  </material>

  <!-- Base chassis -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.25"/>
      <geometry>
        <box size="1.4 0.9 0.4"/>
      </geometry>
      <material name="green"/>
    </visual>
  </link>

  <!-- Front Left Wheel -->
  <link name="front_left_wheel">
    <visual>
      <origin rpy="-1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.25" length="0.15"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>
  <joint name="front_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_left_wheel"/>
    <origin xyz="0.6 0.45 0.0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Front Right Wheel -->
  <link name="front_right_wheel">
    <visual>
      <origin rpy="-1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.25" length="0.15"/>
      </geometry>
      <material name="black"/>
    </visual>

  </link>
  
  
  <joint name="front_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_right_wheel"/>
    <origin xyz="0.6 -0.45 0.0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Rear Left Wheel -->
  <link name="rear_left_wheel">
    <visual>
      <origin rpy="-1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.25" length="0.15"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>
  <joint name="rear_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_left_wheel"/>
    <origin xyz="-0.6 0.45 0.0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Rear Right Wheel -->
  <link name="rear_right_wheel">
    <visual>
      <origin rpy="-1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.25" length="0.15"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>
  <joint name="rear_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_right_wheel"/>
    <origin xyz="-0.6 -0.45 0.0"/>
    <axis xyz="0 1 0"/>
  </joint>

</robot>
